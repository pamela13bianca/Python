<LoginScreen>:

    GridLayout:
        size_hint: 0.4, 0.7
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        cols: 1
        GridLayout:
            cols: 1
            padding: 5, 5
            spacing: 10, 10

            Label:
                text: "Login"
                background_color:3.4,0,1,1
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "Username"

            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login "
                    background_color:1.5,0,3,1
                    size_hint: 0.5, 0.8
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            
        
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                text: "Sign Up"
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        size_hint: 0.3, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        cols: 1
        padding: 3, 3
        spacing: 10, 10
        Label:
            text: "Sign up "
            font_size:"20sp"
        TextInput:
            id: username
            hint_text: "Username"

        TextInput:
            id: password
            hint_text: "Password"
        Button:
            text: "Sign up "
            background_color:1.5,0,3,1
        Button:
            text: "Back"
            user_font_size:"35sp"
            pos_hint: {'center_y': 0.95}
            on_press: root.login()
            background_color:1.5,0,3,1

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
